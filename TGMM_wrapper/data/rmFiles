#!/bin/bash
#use this script to keep only the original TIF files in the folder and remove any result generated by TGMM software

#change for loop to modify number of images
for i in {0..30}
do
	echo $i
	if [ $i -lt 10 ]
	then
		m="0000$i"
	elif [ $i -lt 100 ]; then
		m="000$i"
	elif [ $i -lt 1000 ]; then
                m="00$i"
	else
                m="0$i"
	fi


	cmd2="rm ./data/TM${m}_timeFused_blending/*.txt"
	$cmd2
	cmd2="rm ./data/TM${m}_timeFused_blending/*.bin"
	$cmd2
done

